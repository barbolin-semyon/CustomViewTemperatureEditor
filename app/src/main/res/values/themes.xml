<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomViewTemperatureEditor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="temperatureEditorStyle">@style/DefaultTemperatureEditorStyle</item>
    </style>

    <style name="DefaultTemperatureEditorStyle">
        <item name="background">#7A7A7A</item>
        <item name="background_centre_start">#969696</item>
        <item name="background_centre_end">#333333</item>
        <item name="background_progress_start">#BF4300</item>
        <item name="background_progress_end">#DF6B2D</item>
    </style>

    <style name="BlueTemperatureEditorStyle">
        <item name="background">#7A7A7A</item>
        <item name="background_centre_start">#969696</item>
        <item name="background_centre_end">#333333</item>
        <item name="background_progress_start">@color/purple_700</item>
        <item name="background_progress_end">@color/purple_500</item>
    </style>

</resources>